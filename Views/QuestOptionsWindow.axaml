<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="AndroidSideloader.Views.QuestOptionsWindow"
        Title="Quest settings"
        Width="320"
        Height="590"
        WindowStartupLocation="CenterOwner"
        Background="#2d2d2d"
        CanResize="False">

    <Window.Styles>
        <!-- Section header style -->
        <Style Selector="TextBlock.section-header">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,15,0,10"/>
        </Style>

        <!-- Button style -->
        <Style Selector="Button">
            <Setter Property="Background" Value="#404040"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#555555"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="CornerRadius" Value="3"/>
        </Style>

        <Style Selector="Button:pointerover">
            <Setter Property="Background" Value="#4a4a4a"/>
        </Style>

        <Style Selector="Button:pressed">
            <Setter Property="Background" Value="#353535"/>
        </Style>

        <Style Selector="Button /template/ ContentPresenter">
            <Setter Property="CornerRadius" Value="3"/>
        </Style>

        <Style Selector="Button:pointerover /template/ ContentPresenter">
            <Setter Property="Background">
                <SolidColorBrush Color="#4a4a4a"/>
            </Setter>
        </Style>

        <Style Selector="Button:pressed /template/ ContentPresenter">
            <Setter Property="Background">
                <SolidColorBrush Color="#353535"/>
            </Setter>
        </Style>

        <!-- TextBox style -->
        <Style Selector="TextBox">
            <Setter Property="Background" Value="#1a1a1a"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#555555"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="6,4"/>
            <Setter Property="FontSize" Value="13"/>
        </Style>

        <!-- ComboBox style -->
        <Style Selector="ComboBox">
            <Setter Property="Background" Value="#1a1a1a"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#555555"/>
            <Setter Property="FontSize" Value="13"/>
        </Style>

        <!-- TextBlock style -->
        <Style Selector="TextBlock">
            <Setter Property="Foreground" Value="White"/>
        </Style>

        <!-- CheckBox style -->
        <Style Selector="CheckBox">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="13"/>
        </Style>

        <!-- Label style -->
        <Style Selector="TextBlock.label">
            <Setter Property="Foreground" Value="#B0B0B0"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>
    </Window.Styles>

    <Grid>
        <Grid.Background>
            <ImageBrush Source="avares://AndroidSideloader/Resources/pattern_cubes.png"
                        TileMode="Tile"
                        Stretch="UniformToFill"
                        DestinationRect="0,0,1200,1200"/>
        </Grid.Background>

        <ScrollViewer Background="Transparent">
            <StackPanel Margin="0" Background="Transparent">

                <!-- Set Username Section -->
                <TextBlock Classes="section-header" Text="Set Username"/>
                <Grid ColumnDefinitions="*,Auto" Margin="15,0,15,0">
                    <TextBox Grid.Column="0" Name="UsernameTextBox" Margin="0,0,10,0" Watermark="Enter username"/>
                    <Button Grid.Column="1" Content="APPLY" Name="ApplyUsernameButton" Width="100" Margin="0"/>
                </Grid>

                <!-- Divider -->
                <Border BorderBrush="White" BorderThickness="0,1,0,0" Margin="0,15,0,0"/>

                <!-- Transfer screenshots to Desktop Section -->
                <TextBlock Classes="section-header" Text="Transfer screenshots to Desktop"/>

                <StackPanel Margin="15,0,15,0" Spacing="8">
                    <Button Content="SCREENSHOTS" Name="TransferScreenshotsButton" Margin="80, 5"/>
                    <TextBlock Classes="label" Text="Exports to: Desktop\Quest Screenshots"/>

                    <Button Content="RECORDINGS" Name="TransferRecordingsButton" Margin="80, 5"/>
                    <TextBlock Classes="label" Text="Exports to: Desktop\Quest Recordings"/>

                    <CheckBox Name="DeleteAfterTransferCheckBox" Content="Delete files on Quest after transfer" Margin="0,10,0,0" HorizontalAlignment="Center"/>
                </StackPanel>

                <!-- Divider -->
                <Border BorderBrush="White" BorderThickness="0,1,0,0" Margin="0,15,0,0"/>

                <!-- Temporary Settings Section -->
                <TextBlock Classes="section-header" Text="Temporary Settings" Margin="0,20,0,5"/>
                <TextBlock Text="Reboot Quest to Reset" HorizontalAlignment="Center" FontSize="12" Foreground="#CCCCCC" Margin="0,0,0,10"/>

                <StackPanel Margin="15,0,15,15" Spacing="10">
                    <!-- Refresh Rate -->
                    <ComboBox Name="RefreshRateComboBox" HorizontalAlignment="Stretch" Margin="20, 0" SelectedIndex="0">
                        <ComboBoxItem Content="Select refresh rate"/>
                        <ComboBoxItem Content="72Hz (Default)"/>
                        <ComboBoxItem Content="80Hz"/>
                        <ComboBoxItem Content="90Hz"/>
                        <ComboBoxItem Content="120Hz"/>
                    </ComboBox>

                    <!-- GPU Level -->
                    <ComboBox Name="GpuLevelComboBox" HorizontalAlignment="Stretch" Margin="20, 0" SelectedIndex="0">
                        <ComboBoxItem Content="Select GPU level (0 for default)"/>
                        <ComboBoxItem Content="0 (Default)"/>
                        <ComboBoxItem Content="1"/>
                        <ComboBoxItem Content="2"/>
                        <ComboBoxItem Content="3"/>
                        <ComboBoxItem Content="4 (Maximum)"/>
                    </ComboBox>

                    <!-- CPU Level -->
                    <ComboBox Name="CpuLevelComboBox" HorizontalAlignment="Stretch" Margin="20, 0" SelectedIndex="0">
                        <ComboBoxItem Content="Select CPU level (0 for default)"/>
                        <ComboBoxItem Content="0 (Default)"/>
                        <ComboBoxItem Content="1"/>
                        <ComboBoxItem Content="2"/>
                        <ComboBoxItem Content="3"/>
                        <ComboBoxItem Content="4 (Maximum)"/>
                    </ComboBox>

                    <!-- Resolution -->
                    <TextBlock Text="Resolution (0=default)" HorizontalAlignment="Left" FontSize="13" Margin="0,5,0,5"/>
                    <Grid ColumnDefinitions="*,Auto" Margin="0">
                        <TextBox Grid.Column="0" Name="ResolutionTextBox" Margin="0,0,10,0" Watermark="0"/>
                        <Button Grid.Column="1" Content="APPLY" Name="ApplyResolutionButton" Width="100" Margin="0"/>
                    </Grid>
                </StackPanel>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
