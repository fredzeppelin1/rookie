<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="AndroidSideloader.Views.SettingsWindow"
        Title="Settings"
        Width="350"
        Height="740"
        WindowStartupLocation="CenterOwner"
        Background="#2d2d2d"
        CanResize="False">

    <Window.Styles>
        <!-- Checkbox style to match original -->
        <Style Selector="CheckBox">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Margin" Value="8,0"/>
        </Style>

        <!-- Button style to match original - subtle gradient buttons -->
        <Style Selector="Button">
            <Setter Property="Background">
                <SolidColorBrush Color="#202020"/>
            </Setter>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#555555"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="15,4"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="Margin" Value="14,4"/>
            <Setter Property="CornerRadius" Value="3"/>
        </Style>

        <Style Selector="Button:pointerover">
            <Setter Property="Background">
                <SolidColorBrush Color="#4a4a4a"/>
            </Setter>
        </Style>

        <Style Selector="Button:pressed">
            <Setter Property="Background">
                <SolidColorBrush Color="#353535"/>
            </Setter>
        </Style>

        <Style Selector="Button /template/ ContentPresenter">
            <Setter Property="CornerRadius" Value="3"/>
        </Style>

        <Style Selector="Button:pointerover /template/ ContentPresenter">
            <Setter Property="Background">
                <SolidColorBrush Color="#4a4a4a"/>
            </Setter>
        </Style>

        <Style Selector="Button:pressed /template/ ContentPresenter">
            <Setter Property="Background">
                <SolidColorBrush Color="#353535"/>
            </Setter>
        </Style>

        <!-- TextBox style -->
        <Style Selector="TextBox">
            <Setter Property="Background" Value="#1a1a1a"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#555555"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="6,4"/>
            <Setter Property="FontSize" Value="13"/>
        </Style>

        <!-- TextBlock style -->
        <Style Selector="TextBlock">
            <Setter Property="Foreground" Value="White"/>
        </Style>
    </Window.Styles>

    <Grid>
        <Grid.Background>
            <ImageBrush Source="avares://AndroidSideloader/Resources/pattern_cubes.png"
                        TileMode="Tile"
                        Stretch="UniformToFill"
                        DestinationRect="0,0,1200,1200"/>
        </Grid.Background>
        <ScrollViewer Background="Transparent">
            <StackPanel Margin="5,5,5,5" Background="Transparent">
                <!-- All Checkboxes -->
                <CheckBox Name="CheckForUpdatesCheckBox" Content="Check for Application Updates"/>
                <CheckBox Name="UpdateConfigCheckBox" Content="Update Public Config Automatically"/>
                <CheckBox Name="NoDeviceModeBox" Content="Disable Sideloading (Installing)"/>
                <CheckBox Name="DeleteAfterInstallCheckBox" Content="Delete games after download and install"/>
                <CheckBox Name="TrailersOnCheckBox" Content="Use Trailers instead of Thumbnails"/>
                <CheckBox Name="SingleThreadCheckBox" Content="Enable Single-Threading"/>
                <CheckBox Name="UseDownloadedFilesCheckBox" Content="Don't Prompt to Re-Download"/>
                <CheckBox Name="AutoReinstallCheckBox" Content="Enable auto reinstall upon install failure"/>
                <CheckBox Name="EnableMessageBoxesCheckBox" Content="Enable Message Boxes on task completed"/>
                <CheckBox Name="UserJsonOnGameInstallCheckBox" Content="Push random user json on install"/>
                <CheckBox Name="BmbfCheckBox" Content="Enable BMBF song zips drag and drop"/>
                <CheckBox Name="VirtualFilesystemCompatibilityCheckBox" Content="Enable Virtual Filesystem Compatibility"/>
                <CheckBox Name="HideAdultContentCheckBox" Content="Hide Adult Content"/>

                <!-- Bandwidth Limit Row -->
                <StackPanel Orientation="Horizontal" Margin="14,6,14,6">
                    <TextBlock Text="Bandwidth Limit:" VerticalAlignment="Center" Margin="0,0,8,0" FontSize="13"/>
                    <TextBox Name="BandwidthLimitTextBox" Width="100" VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <TextBlock Text="MB/s" VerticalAlignment="Center" FontSize="13"/>
                </StackPanel>

                <!-- Apply and Reset Settings on same line -->
                <StackPanel Orientation="Horizontal" Margin="14,2,8,12">
                    <Button Name="ApplySettingsButton" Content="Apply Settings" HorizontalAlignment="Left" Width="152" Margin="0"/>
                    <Button Name="ResetSettingsButton" Content="Reset Settings" HorizontalAlignment="Left" Width="152" Margin="8,0,0,0"/>
                </StackPanel>

                <!-- Debug Log Buttons -->
                <Button Name="OpenDebugLogButton" Content="Open Debug Log"/>
                <Button Name="ResetDebugLogButton" Content="Reset Debug Log"/>
                <Button Name="UploadDebugLogButton" Content="Upload Debug Log" Margin="14,2,14,10"/>

                <!-- Directory Buttons -->
                <Button Name="SetDownloadDirectoryButton" Content="Set Download Directory"/>
                <Button Name="SetBackupDirectoryButton" Content="Set Backup Directory"/>
                <Button Name="OpenDownloadDirectoryButton" Content="Open Download Directory"/>
                <Button Name="OpenBackupDirectoryButton" Content="Open Backup Directory"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
